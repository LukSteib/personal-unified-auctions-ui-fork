{
  "name": "unified-auctions",
  "version": "1.0.0",
  "description": "MakerDAO Unified Auctions Electron App",
  "main": "main.js",
  "build": {
    "productName": "Unified Auctions UI",
    "appId": "com.makerdao.unified-auctions",
    "mac": {
      "category": "public.app-category.finance"
    },
    "directories": {
      "output": "out"
    },
    "files": [
      "main.js",
      "dist/**/*"
    ]
  },
  "scripts": {
    "preinstall": "cd ../frontend && npm ci",
    "build": "(cd ../frontend && ENABLE_FILE_PROTOCOL=\"true\" npm run generate) && npx copyfiles -a -u 2 \"../frontend/dist/**/*\" .",
    "start": "electron .",
    "dist": "rm -rf out && npm run build && electron-builder"
  },
  "author": "SIDESTREAM GmbH",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^22.1.0",
    "electron-builder": "^23.6.0"
  }
}
